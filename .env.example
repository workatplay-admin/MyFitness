# Environment Configuration Template
# Copy this file to .env.local for development

# Environment
NODE_ENV=development

# Database
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/myfitness?schema=public"

# Supabase (Optional - for authentication and real-time features)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# OAuth Providers (Optional)
# GitHub OAuth
GITHUB_ID="your-github-oauth-id"
GITHUB_SECRET="your-github-oauth-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (Optional)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="MyFitness <no-reply@myfitness.app>"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_MIXPANEL_TOKEN="your-mixpanel-token"

# Monitoring (Optional)
SENTRY_DSN="https://your-key@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-key@sentry.io/project-id"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# API Keys (Optional)
OPENAI_API_KEY="sk-..."
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Feature Flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES="false"
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"

# Security
SECURITY_HEADERS_ENABLED="true"
CSP_REPORT_URI="https://your-csp-report-endpoint.com"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# Vercel (Automatically set by Vercel)
# VERCEL_ENV
# VERCEL_URL
# VERCEL_REGION
# VERCEL_GIT_PROVIDER
# VERCEL_GIT_REPO_SLUG
# VERCEL_GIT_REPO_OWNER
# VERCEL_GIT_REPO_ID
# VERCEL_GIT_COMMIT_REF
# VERCEL_GIT_COMMIT_SHA
# VERCEL_GIT_COMMIT_MESSAGE
# VERCEL_GIT_COMMIT_AUTHOR_LOGIN
# VERCEL_GIT_COMMIT_AUTHOR_NAME